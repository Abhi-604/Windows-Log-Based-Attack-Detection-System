{
  "Sysmon": {
    "@schemaversion": "4.30",
    "EventFiltering": {
      "RuleGroup": {
        "@name": "",
        "@groupRelation": "or",
        "ProcessCreate": {
          "@onmatch": "include",
          "Rule": {
            "@name": "Control Panel Items",
            "@groupRelation": "or",
            "CommandLine": [
              {
                "@name": "technique_id=T1218.002,technique_name=Control Panel Items",
                "@condition": "contains all",
                "#text": "control;/name"
              },
              {
                "@name": "technique_id=T1218.002,technique_name=Control Panel Items",
                "@condition": "contains all",
                "#text": "rundll32.exe;shell32.dll;Control_RunDLL"
              }
            ]
          }
        }
      }
    }
  }
}