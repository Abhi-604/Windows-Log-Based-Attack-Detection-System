{
  "Sysmon": {
    "@schemaversion": "4.30",
    "EventFiltering": {
      "RuleGroup": {
        "@name": "",
        "@groupRelation": "or",
        "RegistryEvent": {
          "@onmatch": "include",
          "TargetObject": [
            {
              "@condition": "begin with",
              "#text": "hklm\\system\\mounteddevices\\"
            },
            {
              "@condition": "contains all",
              "#text": "hklm\\system\\;\\enum\\usb\\"
            }
          ]
        }
      }
    }
  }
}